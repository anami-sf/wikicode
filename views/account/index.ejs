<%- include('../partials/header') %>

<h3>My Recipes</h3>
<form 
method="GET"
action="/recipes/newRecipe" 
>
<button type="submit">Add recipe</button>
</form>
<table class="indexTable">
    <tr>
        <th></th>
        <th>Title</th>
        <th>Description</th>
        <th>App Framework</th>
    </tr>
    <%recipes.forEach((recipe, idx) => { %>
    <tr>
        <th>
            <form 
                class="crudBtn"
                method="POST"
                action="/account/<%=recipe._id %>?_method=DELETE" 
            >
                <button type="submit"><i class="fa fa-trash" aria-hidden="true"></i></button>
            </form>
            <form
                class="crudBtn" 
                method="GET"
                action="/recipes/<%=recipe._id %>/edit" 
            >
                <button type="submit" >Edit</button>
            </form>  
        </th>
        <th>
            <a href="/account/<%=recipe._id%>"><%=recipe.title%></a>
        </th>
        <th><%=recipe.description%></th>
        <th><%=recipe.appServer%></th>
    </tr>    
    <%})%>
</table>
    
<%- include('../partials/footer') %>