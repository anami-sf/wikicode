<%- include('../partials/header') %>


<div id="metabox">
    <div class="row">
        <div class="col">
            <div class="">title</div>
            <div class="display" id="title"><%=recipe.title%></div>
        </div>
        <div class="col"> 
            <div>language</div>
            <div class="display">Javascrip-hc</div>
        </div>
        <div class="col"> 
            <div>app framework</div>
            <div class="display"><%=recipe.appServer%></div>
        </div>
</div>
    <div class="row">
        <div class="col"> 
            <div>database</div>
            <div class="display"><%=recipe.database%></div>
        </div>
        <div class="col"> 
            <div>description</div>
            <div class="display"><%=recipe.description%></div>
        </div>
        <div class="col"> 
            <div>web Server</div>
            <div class="display"><%=recipe.webServer%></div>
        </div>
        <div class="col"> 
            <div>host</div>
            <div class="display"><%=recipe.appHost%></div>
        </div> 
    </div>
</div> 


<h2>Instructions: <%=instructions%></h2>


<form method="POST" action="/recipes/<%=recipe._id%>/instructions">
    <label>Step
        <input type="text" name="description" >
    </label>
    <label>Code
        <input type="text" name="code" >
    </label>
    <button type="submit">Save</button>
</form>

<table>
    <%instructions.forEach((instruction, idx) => { %>
    <tr>
        <th class="step">step</th>
        <th class="code"><%=instruction.code%></th>
    </tr>
    <%})%>    
</table>
    

<%- include('../partials/footer') %>