<%- include('../partials/header') %>

<h1>Edit Recipe</h1>

<form 
    method="POST"
    action="/recipes/<%=recipe._id%>/edit?_method=PUT" >
    <label>Title:
        <input type="text" value="<%=recipe.title%>" name="title" >
    </label>
    <label>Category:
        <input type="text" value="<%=recipe.category%>" name="category" >
    </label>
    <label>description:
        <input type="text" value="<%=recipe.description%>" name="description" >
    </label>
    <label>Web Server:
        <input type="text" value="<%=recipe.webServer%>"  name="webServer" >
    </label>
    <label>Application Framework:
        <input type="text" value="<%=recipe.appServer%>"  name="appServer" >
    </label>
    <label>Database:
        <input type="text" value="<%=recipe.database%>"  name="database" >
    </label>
    <label>Host:
        <input type="text" value="<%=recipe.appHost%>"  name="appHost" >
    </label>
    <button type="submit">Submit</button>
</form>

<%- include('../partials/footer') %>